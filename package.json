{
  "name": "git-user-config-manager",
  "displayName": "Git User Config Manager",
  "description": "A VSCode Extension for managing your git user config.",
  "publisher": "luhc228",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.78.0"
  },
  "icon": "assets/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Git User Config Manager",
      "properties": {
        "git-user-config-manager.gitUserConfig": {
          "type": "array",
          "description": "Git user config(user.name and user.email)",
          "default": []
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package --no-dependencies --allow-missing-repository",
    "release": "vsce publish --no-dependencies --allow-missing-repository",
    "vscode:prepublish": "pnpm esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "pnpm esbuild-base --sourcemap --watch",
    "build": "pnpm esbuild-base --sourcemap",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test": "node ./out/test/runTest.js",
    "eslint": "eslint --ext .js,.ts ./",
    "eslint:fix": "pnpm run eslint --fix"
  },
  "devDependencies": {
    "@applint/spec": "^1.2.3",
    "@commitlint/cli": "^17.6.6",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.18.10",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1"
  }
}